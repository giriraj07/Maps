<?xml version="1.0" encoding="utf-8"?>

   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".LearnCategory"
    >
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/textview_border"
        android:orientation="vertical"
            >
          <TextView
            android:id="@+id/tv7"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/textview_border_top"
            android:text="Create an account to see its progress \nit's free and only takes a minute"
            android:textAlignment="center"
            android:textSize="20dp"
            android:gravity="center_horizontal"
            />
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:orientation="horizontal"
                  >
           <TextView
               android:id="@+id/createacc"
               android:layout_width="100dp"
               android:layout_height="match_parent"
               android:background="@drawable/orange_circular"
               android:text="Create Account"
               android:layout_marginStart="20dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="#00ff00"
               android:layout_marginLeft="20dp" />
                      <TextView
                      android:id="@+id/tv9"
                      android:layout_width="100dp"
                      android:layout_height="match_parent"
                      android:text="OR"
                          android:gravity="center"
                      android:layout_marginStart="20dp"
                      android:textAlignment="center"
                      android:textSize="18dp"
                      android:textColor="#000000"
                      android:layout_marginLeft="20dp" />

                    <TextView
                        android:id="@+id/login"
                      android:layout_width="100dp"
                      android:layout_height="match_parent"
                      android:background="@drawable/orange_circular"
                      android:text="Login"
                      android:layout_marginStart="20dp"
                      android:textAlignment="center"
                      android:textSize="20sp"
                      android:textColor="#00ff00"
                        android:gravity="center"
                      android:layout_marginLeft="20dp"
                        />
              </LinearLayout>

            </LinearLayout>
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/textview_border"
                android:orientation="vertical"
                >
        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/textview_border_top"
            android:text="NUMBERS ( 1-50 )"
            android:textSize="20dp"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="0/50 words completed"
            android:textAlignment="center"
            android:textSize="10sp"
            android:textColor="@color/colorAccent"
            />

        <ProgressBar
            android:id="@+id/progressBar4"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:indeterminate="true"
            />
        <TextView
            android:id="@+id/studynumbers"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/textview_border_below"
            android:text="Study these words"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#ffffff"/>

    </LinearLayout>

          <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/textview_border"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/textview_border_top"
            android:text="DAYS OF WEEK"
            android:textSize="20dp"
            android:gravity="center_horizontal" />
        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="0/50 words completed"
            android:textAlignment="center"
            android:textSize="10sp"
            android:textColor="@color/colorAccent"

            />
        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:indeterminate="true"
            />

        <TextView
            android:id="@+id/studydays"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/textview_border_below"
            android:text="Study these words"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/textview_border"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/textview_border_top"
            android:text="MONTHS OF YEAR"
            android:textSize="20dp"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="0/50 words completed"
            android:textAlignment="center"
            android:textSize="10sp"
            android:textColor="@color/colorAccent"
            />
           <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:indeterminate="true"
            />
        <TextView
            android:id="@+id/studymonths"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/textview_border_below"
            android:text="Study these words"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#ffffff" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/textview_border"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/textview_border_top"
            android:text="RELATIONSHIPS"
            android:textSize="20dp"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="0/50 words completed"
            android:textAlignment="center"
            android:textSize="10sp"
            android:textColor="@color/colorAccent"
            />
           <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:indeterminate="true"
            />
           <TextView
            android:id="@+id/studyrelationships"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/textview_border_below"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="Study these words"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#ffffff"
            />
    </LinearLayout>
</LinearLayout>