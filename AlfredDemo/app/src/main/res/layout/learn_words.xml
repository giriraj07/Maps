<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Learn_words">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/textview_border"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv7"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/textview_border_top"
            android:text="Create an account to see its progress \nit's free and only takes a minute"
            android:textAlignment="center"
            android:textSize="20dp"
            android:gravity="center_horizontal"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/createacc"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:background="@drawable/orange_circular"
                android:text="Create Account"
                android:layout_marginStart="20dp"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#00ff00"
                android:layout_marginLeft="20dp" />
            <TextView
                android:id="@+id/tv9"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:text="OR"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_marginLeft="20dp" />

            <TextView
                android:id="@+id/login"
                android:layout_width="160dp"
                android:layout_marginStart="10dp"
                android:layout_height="40dp"
                android:background="@drawable/orange_circular"
                android:text="Login"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="#00ff00"
                android:gravity="center"
                android:layout_marginLeft="10dp" />
        </LinearLayout>


    </LinearLayout>
        <LinearLayout
        android:layout_width="330dp"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/textview_border"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="210dp"
            android:background="@drawable/textview_border_top"
            android:padding="10dp"
            android:src="@drawable/ic_bookmark"
            android:textSize="25dp"
            />
        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/textview_border_top"
            android:gravity="center"
            android:text="MIYAD"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/textview_border_top"
            android:gravity="center"
            android:padding="10dp"
            android:src="@drawable/ic_volume_audio"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/tap"
            android:layout_width="321dp"
            android:layout_height="50dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/textview_border_below"
            android:gravity="center"
            android:text="Tap to see the meaning"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:text="You have mastered 5/50 words"
            android:textSize="15dp"
            android:textStyle="bold"
            />
        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="340dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="@color/colorAccent"
            android:outlineAmbientShadowColor="#5D360A "
            android:progress="40"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:text="You are reviewing 1/50 words"
            android:textSize="15dp"
            android:textStyle="bold"
            />

        <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="340dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="@color/colorAccent"
            android:outlineAmbientShadowColor="#5D360A "
            android:progress="5"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:text="You are learning 11/50 words"
            android:textSize="15dp"
            android:textStyle="bold"
            />
        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="340dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="@color/colorAccent"
            android:outlineAmbientShadowColor="#5D360A "
            android:progress="20"
            />
    </LinearLayout>
</LinearLayout>