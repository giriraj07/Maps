<?xml version="1.0" encoding="utf-8"?>
  <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Learn_words_meaning"
    android:orientation="vertical">
    <LinearLayout
        android:layout_height="100dp"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:background="@drawable/menu_background"
        android:orientation="vertical">
    </LinearLayout>
    <LinearLayout
        android:layout_width="330dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="35dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/textview_border"
        android:orientation="vertical">

          <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="210dp"
            android:background="@drawable/textview_border_top"
            android:padding="10dp"
            android:src="@drawable/ic_bookmark"
            android:textSize="25dp"
            />
           <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/textview_border_top"
            android:text="One"
            android:textSize="25dp"
            android:gravity="center"
               />
          <TextView
            android:id="@+id/iknew"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/back_colorgreen"
            android:gravity="center"
            android:text="I knew the meaning"
            android:textColor="#ffffff"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/ididnt"
            android:layout_width="321dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="5dp"
            android:layout_height="45dp"
            android:background="@drawable/textview_border_below"
            android:text="I didn't knew the meaning"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#ffffff"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        >
           <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:text="You have mastered 5/50 words"
            android:textSize="15dp"
            android:textStyle="bold"
            />
        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="340dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="@color/colorAccent"
            android:outlineAmbientShadowColor="#5D360A "
            android:progress="40"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:text="You are reviewing 1/50 words"
            android:textSize="15dp"
            android:textStyle="bold"
            />
        <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="340dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="@color/colorAccent"
            android:outlineAmbientShadowColor="#5D360A "
            android:progress="5"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:text="You are learning 11/50 words"
            android:textSize="15dp"
            android:textStyle="bold"
            />
            <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="340dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="@color/colorAccent"
            android:outlineAmbientShadowColor="#5D360A "
            android:progress="20"
            />
    </LinearLayout>
</LinearLayout>